#!/bin/bash

#===============================================================================
#       USAGE:  bash generate-file <n-lines> <max>
#
# DESCRIPTION:  Generates a file with <n-lines> lines, each line containing a
#               random number less than <max>.
#===============================================================================

LINES=$1; shift
RANGE=$1; shift
FILE_NAME="nums"

rm -rf $FILE_NAME

for i in $(seq "$LINES"); do
    echo "$(($RANDOM % $RANGE))" >> $FILE_NAME
done
